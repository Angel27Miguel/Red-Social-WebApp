@model List<RedSocialWebApp.Core.Application.ViewModels.Amistad.AmistadViewModel>

@{
    ViewData["Title"] = "Listado de Amigos";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <br />
                <div class="card-header bg-black">
                    <h3 class="text-white">Listado de Amigos</h3>
                </div>
                <div class="card-body">

                    @if (Model == null || !Model.Any())
                    {
                        <p>No tienes amigos agregados aún.</p>
                    }
                    else
                    {
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Usuario</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var amigo in Model)
                                {
                                    <tr>
                                        <td>
                                            <img src="@amigo.UsuarioFotoPerfil" alt="Foto de perfil" class="img-fluid rounded-circle me-3" style="width: 50px; height: 50px;" />
                                            @amigo.UsuarioNombre
                                        </td>
                                        <td>
                                            <a asp-action="Delete" asp-route-id="@amigo.Id" class="btn btn-sm btn-outline-danger">Eliminar</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    <a asp-controller="Amistad" asp-action="AmigoPublicaciones" class="btn btn-warning">Volver atras</a>
                </div>
            </div>
        </div>
    </div>
</div>
