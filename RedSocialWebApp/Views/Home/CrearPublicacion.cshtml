@model RedSocialWebApp.Core.Application.ViewModels.Publicaciones.SavePublicacionViewModel

@{
    bool editMode = Model.Id != 0;
    ViewData["Title"] = editMode ? "Editar Publicación" : "Crear Publicación";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-black">
                    <h3 class="text-white">@ViewData["Title"]</h3>
                </div>
                <div class="card-body">
                    <form method="post" enctype="multipart/form-data" asp-controller="Home" asp-action="@(editMode ? "Edit" : "Create")">
                        <div class="mb-3">
                            <label asp-for="Contenido" class="form-label">Contenido</label>
                            <textarea asp-for="Contenido" class="form-control" required></textarea>
                            <span asp-validation-for="Contenido" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="File" class="form-label">Subir Imagen</label>
                            <input asp-for="File" type="file" class="form-control" accept="image/*" />
                            <span asp-validation-for="File" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="VideoYouTube" class="form-label">Video</label>
                            <input asp-for="VideoYouTube" class="form-control" />
                            <span asp-validation-for="VideoYouTube" class="text-danger"></span>
                        </div>

                        <input type="hidden" asp-for="Id" />

                        <button type="submit" class="btn btn-success">@(editMode ? "Actualizar" : "Guardar")</button>
                        <a asp-controller="Home" asp-action="Index" class="btn btn-warning">Volver atrás</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
